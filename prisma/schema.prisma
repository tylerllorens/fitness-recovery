generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  dob       DateTime? // date of birth (optional)
  avatarUrl String?   // profile photo URL (optional)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  days      MetricDay[]
  tokens    RefreshToken[]
}

/// Daily metrics captured per user per calendar date (unique)
model MetricDay {
  id         String   @id @default(cuid())
  userId     String
  date       DateTime
  // inputs - NOW NULLABLE
  sleepHours Float?    
  rhr        Float?     
  hrv        Float?     
  strain     Float?     
  // outputs
  readiness  Int       @default(0) // 0-100
  notes      String?
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@unique([userId, date])
  @@index([userId, date])
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  revoked   Boolean  @default(false)
  createdAt DateTime @default(now())
}